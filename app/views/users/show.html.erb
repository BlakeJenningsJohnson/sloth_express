<img src="http://placekitten.com/150/150"></img><br><br>
<div><h1><%= @user.username %></h1></div>
<em><%= @user.email %></em>

<h2>My Products</h2>
<%= link_to 'Add New Product', new_product_path %>

<br><br>

<% @products.each do |product| %>
  <tr>
    <td id='product_description'>
      <div class="title">
        <%= link_to product.name, product %>
      </div>
      <%= number_to_currency(product.price) %>
      <br>
      <%= product.description %>
      <div id="edit_destroy">
        <% unless session[:user_id].nil? %>
        [<%= link_to 'Edit', edit_product_path(product) %>] [<%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %>]
        <% end %>
      </div>
    </td>
  </tr>
<% end %>