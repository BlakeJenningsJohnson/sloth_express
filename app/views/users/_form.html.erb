<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>
  <br>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_area :email %>
  </div>
  <br>
  <div class="field">
    <%= f.label :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="field">
    <%= f.label :confirm_password %><br>
    <%= password_field_tag :confirm_password %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


