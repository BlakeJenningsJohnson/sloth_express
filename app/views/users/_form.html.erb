<%= form_for(@user) do |f| %>
	<% if @user.errors.any? %>
		<div class="error_messages">
			<h2><%= pluralize(@user.errors.count, "error") %>Form is invalid</h2>
			<ul>
			<% @user.errors.full_messages.each do |message| %>
				<li> <%= message %> </li>
			<% end %>	
			</ul>
		</div>
	<% end %>
	  <div class="field">
	    <%= f.label :username %><br>
	    <%= f.text_field :username %>
	  </div>
	  <br>
	  <div class="field">
	    <%= f.label :email %><br>
	    <%= f.text_area :email %>
	  </div>
	  <br>
	  <div class="field">
	    <%= f.label :password %><br>
	    <%= password_field_tag :password %>
	  </div>
	  <div class="field">
	    <%= f.label :password_confirmation %><br>
	    <%= password_field_tag :password_confirmation %>
	  </div>
	  <br>
	  <div class="actions">
	    <%= f.submit %>
	  </div>
<% end %>


