<h1>Sloth Marketplace</h1>

<% if current_user %>
  <%= button_to 'Create New Product', new_product_path %>
<% end %>
<br><br>

<table>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <div>
            <% if product.photo == "" %>
              <%= image_tag("/assets/sloth_default.png") %> 
            <% else %>
              <%= image_tag(product.photo, width: '150') %> 
            <% end %>
          </div> 
        </td>
        <td id="product_description"> 
          <div class="title">
            <%= link_to product.name, product %>
          </div>
          <%= number_to_currency(product.price) %>
          <br>
          <%= product.description %>
          <%= button_to "Add to Cart", :method => :post %>
          <div id="edit_destroy"> 
              <% if session[:user_id] == product.user_id %>          
              [<%= link_to 'Edit', edit_product_path(product) %>] 
              [<%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %>]
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

