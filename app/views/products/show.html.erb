<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>
<p>
  <strong>Sold By:</strong>
  <%= User.find(@product.user_id).username %>
</p>
<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<p>
  <strong>Price:</strong>
  <%= number_to_currency(@product.price) %>
</p>
<p>
  <strong>Photo:</strong><br>
  <%= image_tag(@product.photo, height: '150') %> 
</p>
<p>
  <strong>Stock:</strong>
  <%= @product.stock %>
</p>

<p>
<strong>Categories:</strong><br>
  <% @product.categories.each do |category| %>
    <ul><li><%= link_to "#{category.name}", category_path(category) %></li></ul>
  <% end %>
</p>


<%= link_to 'Back', products_path %>


<%= form_for([@product, Review.new]) do |f| %>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <br>
    <div class="field">
      <%= f.label :author %><br>
      <%= f.text_field :author %>
    </div>
    <br>
    <div class="field">
      <%= f.label :content %><br>
      <%= f.text_field :content %>
    </div>
    <div class="field">
      <%= f.label :rating %><br>
      <%= f.select( :rating, options_for_select(1..5) ) %>
    </div>

    <br>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>



  <% @product.reviews.each do |review| %>

    <div class="review">
      <strong><%= review.title %></strong> </br>
      <%= time_ago_in_words(review.created_at) %> ago, by <strong><%= review.author %>:</strong> </br>
      <%= review.content %> </br>
      <%= review.rating.times do %>
      <%= image_tag "sloth_star.jpeg",size:"25x25" %>
      <% end %>
   
    <hr>
  <% end %>
   </div>


